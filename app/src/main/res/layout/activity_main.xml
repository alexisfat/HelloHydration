<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.umiacs.hellohydration.MainActivity">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="false"
        android:rotation="270"
        android:layout_below="@+id/goalNum"
        android:max="1000"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/dropfin"
        android:id="@+id/imageView2"
        android:background="@android:color/transparent"
        android:layout_above="@+id/progressText"
        android:layout_below="@+id/goalNum"
        android:layout_centerInParent="true"/>

    <TextView
        android:text="Goal for Today:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/goalText"
        android:textColor="@color/navyBlue"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goalText"
        android:layout_centerHorizontal="true"
        android:id="@+id/goalNum"
        android:textSize="24sp" />
<!--
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/drop0"
        android:layout_below="@+id/goalNum"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginBottom="30dp" />
-->

    <TextView
        android:text="Progress: 0 fl oz."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressText"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:textSize="20dp" />

</RelativeLayout>

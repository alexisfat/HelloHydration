<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow android:paddingTop="80dp">

            <ImageView
                android:paddingLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/arrow"
                android:id="@+id/arrow1" />

            <TextView
                android:id="@+id/currentDate"
                android:paddingTop="35dp"
                android:text="December, 9th 2016"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dip" />

            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/arrow"
                android:rotation="180"
                android:id="@+id/arrow2" />

        </TableRow>

        <TableRow android:paddingTop="10dp">

            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_directions_walk_black_24dp"
                android:id="@+id/imageView5" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/walkingTime"
                android:text="00:00"
                android:textSize="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow android:paddingTop="10dp">
            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_directions_run_black_24dp"
                android:id="@+id/imageView6" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/runningTime"
                android:text="00:00"
                android:textSize="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

        <TableRow android:paddingTop="10dp">
            <ImageView
                android:paddingLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_directions_bike_black_24dp"
                android:id="@+id/imageView7" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/bikingTime"
                android:text="00:00"
                android:textSize="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:id="@+id/trackbutton" />

